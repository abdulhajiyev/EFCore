<Window
    x:Class="EFCore.Views.CategoryAddWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EFCore.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CategoryAddWindow"
    Width="400"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Label Margin="10,0,0,0">Category:</Label>
                <TextBox
                    Name="txt"
                    Height="25"
                    Margin="10" />
            </StackPanel>
            <Grid Grid.Row="1">
                <Button
                    Click="Button_Click"
                    Grid.Column="0"
                    Height="25"
                    Margin="10">
                    OK
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>